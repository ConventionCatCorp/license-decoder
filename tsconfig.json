{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "es2018"
    ],
    "outDir": "./dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "noErrorTruncation": true,
    "typeRoots": [
    ],
    "types": [
      "mocha"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/*.test.*",
  ]
}
